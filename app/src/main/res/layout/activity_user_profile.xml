<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5E48C"
    android:visibility="visible"
    tools:context=".UserProfile">

    <EditText
        android:id="@+id/etUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter your first name:"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <EditText
        android:id="@+id/etUserWeight"
        android:layout_width="342dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint='Enter your current weight in kg ("56.0"):'
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUserName"
        app:layout_constraintVertical_bias="0.03" />

    <Button
        android:id="@+id/btnApplyInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"
        app:backgroundTint="#34A0A4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBday"
        app:layout_constraintVertical_bias="0.095" />

    <TextView
        android:id="@+id/tvBday"
        android:layout_width="233dp"
        android:layout_height="28dp"
        android:text="Select your birthday below:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUserActivityGoal"
        app:layout_constraintVertical_bias="0.03" />

    <Button
        android:id="@+id/btnBday"
        style="?android:spinnerStyle"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:onClick="openDatePicker"
        android:text="JAN 01 2021"
        android:textColor="#00695C"
        android:textSize="25sp"
        app:backgroundTint="#00695C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBday"
        app:layout_constraintVertical_bias="0.03" />

    <EditText
        android:id="@+id/etUserIdealWeight"
        android:layout_width="342dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint='Enter your ideal weight in kg ("56.0"):'
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUserWeight"
        app:layout_constraintVertical_bias="0.03" />

    <EditText
        android:id="@+id/etUserActivityGoal"
        android:layout_width="342dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint='Enter your daily activity goal in h ("2.5"):'
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUserIdealWeight"
        app:layout_constraintVertical_bias="0.03" />


</androidx.constraintlayout.widget.ConstraintLayout>